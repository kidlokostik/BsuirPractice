<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="v1-1" author="Urbanait Konstantin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="Сategories"/>
            </not>
        </preConditions>

        <createTable tableName="Сategories">
            <column name="product_id" type="integer" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="pizza_name" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="drinks" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="deserts" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="souces" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="snacks" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="cocktails" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>


    <changeSet id="v1-2" author="Urbanait Konstantin">
        <preConditions onFail="MARK_RAN">
            <tableIsEmpty tableName="Сategories"/>
        </preConditions>
        <insert tableName="Сategories">
            <column name="product_id" value ="1"/>
            <column name="pizza_name" value ="Четыре сыра"/>
            <column name="drinks" value="Лидский Квас"/>
            <column name="deserts" value="Наполеон"/>
            <column name="souces" value="Сырный соус"/>
            <column name="snacks" value="Орео"/>
            <column name="cocktails" value="Мохито"/>
        </insert>
    </changeSet>


</databaseChangeLog>